<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".CafeInformationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="20dp"
            android:src="@drawable/ic_back_arrow" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/festina_lente"
            android:paddingStart="110dp"
            android:text="Near Me"
            android:textColor="@color/mediumBrown"
            android:textSize="25sp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:backgroundTint="@color/mediumBrown"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0dp"
                    android:backgroundTint="@color/lightBrown"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/cafe_image"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/kopi_kulo" />

                    <TextView
                        android:id="@+id/cafe_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="130dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Cofee Kulo"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/cafe_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="160dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Jalan Kaliurang No.KM. 5,2, Manggung,
                 Caturtunggal, Kec. Depok, Kabupaten Sleman, Daerah
                 Istimewa Yogyakarta 55284."
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="250dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="20 Seat Available"
                        android:textColor="@color/white" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="320dp"
                    android:backgroundTint="@color/lightBrown"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/cafe_image2"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/arah_pandawa" />

                    <TextView
                        android:id="@+id/cafe_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="130dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Arah Pandawa"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/cafe_address2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="160dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Jalan Kaliurang No.KM. 5,2, Manggung,
                 Caturtunggal, Kec. Depok, Kabupaten Sleman, Daerah
                 Istimewa Yogyakarta 55284."
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="250dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="20 Seat Available"
                        android:textColor="@color/white" />

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>


</RelativeLayout>