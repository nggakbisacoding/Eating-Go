<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="800dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:fontFamily="serif"
                android:text="Complete Your"
                android:textSize="30sp"
                android:layout_marginTop="150dp"
                android:layout_marginStart="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:fontFamily="serif"
                android:text="Account Setup !"
                android:textSize="30sp"
                android:layout_marginTop="190dp"
                android:layout_marginStart="40dp"/>

<!--            ini nambahin background textbox-->
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/textbackground"
                android:layout_marginTop="330dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/textbackground"
                android:layout_marginTop="410dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/textbackground"
                android:layout_marginTop="480dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/textbackground"
                android:layout_marginTop="555dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="280dp"
                android:layout_marginEnd="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/register_as_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:paddingStart="20dp"
                    android:text="I Am A New User"
                    android:textSize="15sp"
                    android:clickable="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="/"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/create_as_employee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:paddingStart="20dp"
                    android:text="Create As Employee"
                    android:textSize="15sp"
                    android:clickable="true"/>

            </LinearLayout>

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:lines="1"
                android:maxLines="1"
                android:inputType="text"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:hint="Username"
                android:textColorHint="@color/white"
                android:fontFamily="@font/serif_regular"
                android:paddingStart="20dp"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginTop="330dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp" />
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:lines="1"
                android:maxLines="1"
                android:inputType="text"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:hint="Email"
                android:textColorHint="@color/white"
                android:fontFamily="@font/serif_regular"
                android:paddingStart="20dp"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginTop="410dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                />
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:lines="1"
                android:maxLines="1"
                android:inputType="text"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:hint="Email / Phone"
                android:textColorHint="@color/white"
                android:fontFamily="@font/serif_regular"
                android:paddingStart="20dp"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginTop="480dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                />
            <EditText
                android:id="@+id/confirm_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:lines="1"
                android:maxLines="1"
                android:inputType="textPassword"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:hint="Password"
                android:textColorHint="@color/white"
                android:fontFamily="@font/serif_regular"
                android:paddingStart="20dp"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginTop="555dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                />
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/serif_regular"
        android:textSize="20sp"
        android:text="Register"
        android:textColor="@color/white"/>
</RelativeLayout>